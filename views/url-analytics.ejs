<!-- views/url-analytics.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Analytics</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #343a40;
        color: white;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">URL Shortener</a>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/user/shorten">Shorten URL</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/analytics">Analytics</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-5">
      <h2>Analytics for <%= url.shortUrl %></h2>

      <% if (analytics.length > 0) { %>
      <table class="table table-dark">
        <thead>
          <tr>
            <th>User Agent</th>
            <th>IP Address</th>
            <th>OS Type</th>
            <th>Device Type</th>
            <th>Location</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% analytics.forEach(item => { %>
          <tr>
            <td><%= item.userAgent %></td>
            <td><%= item.ipAddress %></td>
            <td><%= item.osType %></td>
            <td><%= item.deviceType %></td>
            <td><%= item.location %></td>
            <td><%= item.timestamp.toLocaleString() %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <p>No analytics data available.</p>
      <% } %>
    </div>

    <footer class="text-center mt-5">
      <p>Â© 2024 URL Shortener. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
