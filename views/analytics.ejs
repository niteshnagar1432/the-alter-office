<!-- views/analytics.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Analytics</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">URL Shortener</a>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/user/shorten">Shorten URL</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/analytics">Analytics</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-5">
      <h2>Your URL Analytics</h2>

      <% if (userUrls.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Short URL</th>
              <th>Long URL</th>
              <th>Topic</th>
              <th>Clicks</th>
              <th>Action</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% userUrls.forEach(url => { %>
              <tr>
                <td><a href="/<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
                <td><%= url.longUrl %></td>
                <td><%= url.topic || 'None' %></td>
                <td><%= url.clicks %></td>
                <td><a target="_blank" href="/user/shorten/<%= url.shortUrl %>" class="btn btn-primary btn-sm">View</a></td>
                <td><%= url.createdAt.toLocaleDateString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No URLs shortened yet.</p>
      <% } %>
    </div>

    <footer class="text-center mt-5">
      <p>Â© 2024 URL Shortener. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
